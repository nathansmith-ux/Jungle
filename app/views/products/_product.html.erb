<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div class="d-flex flex-row-reverse justify-content-between align-items-center">
    <% if product.quantity == 0 %>
    <div>
      <button class="btn disabled" aria-disabled="true">
        <%= fa_icon "shopping-cart", text: 'Add' %>
      </button>
    </div>
    <div>
      <button class='btn bg-danger text-white'>Sold Out</button>
    </div>
    <% else %>
      <div>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
      method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    </div>
    <% end %>
  </div>
</article>
